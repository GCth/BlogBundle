{% extends 'StfalconBlogBundle::internal.html.twig' %}

{% block content %}
    <div class="post">
        <h1>
            {{ post.title }}
        </h1>

        {{ post.textAsHtml|moreToSpan|raw }}

        <ul class="tags">
            {% for tag in post.tags %}
                <li>
                    <a href="{{ path('blog_tag_view', { 'slug': tag.text }) }}">{{ tag.text }}</a>{% if not loop.last %}, {% endif %}
                </li>
            {% endfor %}
        </ul>

        <ul class="info">
            <li class="datetime">
                28 мая 2011
            </li>
            <li class="author">
                <a href="http://blog.stfalcon.com">Степан Танасийчук</a>,
            </li>
        </ul>

        {#<div id="disqus_thread"></div>
        <script type="text/javascript">
