{% extends 'StfalconBlogBundle::internal.html.twig' %}

{% block title %}/ {% trans %} Блог {% endtrans %} / {{ post.title }}{% endblock %}

{% block content %}
    <div class="post">
        <h1>
            {{ post.title }}
        </h1>

        <p>
            {{ post.textAsHtml|moreToSpan|raw }}
        </p>

        {% include 'StfalconBlogBundle:Post:_post_info.html.twig' with {'post': post, 'share_buttons': true} %}

        <div id="disqus_thread"></div>
        <script type="text/javascript">
            var disqus_shortname = 'stfalcon-studio';
            var disqus_identifier = 'stfalcon-studio_post_{{ post.id }}';
            var disqus_url = '{{ url('blog_post_view', { 'slug': post.slug }) }}';
            var disqus_title = '{{ post.title }}'

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
    </div>
{% endblock %}