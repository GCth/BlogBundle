{% extends 'StfalconBlogBundle::internal.html.twig' %}

{% block content %}
    <div class="post">
        <h1>
            {{ post.title }}
        </h1>

        {{ post.textAsHtml|moreToSpan|raw }}

        {% include 'StfalconBlogBundle:Post:_post_info.html.twig' with {'post': post} %}

        <div id="disqus_thread"></div>
        <script type="text/javascript">
            var disqus_shortname = 'stfalcon-studio'; // required: replace example with your forum shortname

            // The following are highly recommended additional parameters. Remove the slashes in front to use.
            var disqus_identifier = 'stfalcon-studio_post_{{ post.id }}';
            var disqus_url = '{{ path('blog_post_view', { 'slug': post.slug }) }}';
            {# todo устанавливать в зависимости от параметров среды или из конфига #}
            var disqus_developer = 1;

            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
        </script>
    </div>
{% endblock %}