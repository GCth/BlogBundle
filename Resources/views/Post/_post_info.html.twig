<ul class="tags">
    {% for tag in post.tags %}
        <li>
            <a href="{{ path('blog_tag_view', { 'slug': tag.text }) }}">{{ tag.text }}</a>{% if not loop.last %}, {% endif %}
        </li>
    {% endfor %}
</ul>

<ul class="info">
    <li class="datetime">
        {{ post.created|date("d M Y") }}
    </li>
    {#<li class="author">
        <a href="http://blog.stfalcon.com">Степан Танасийчук</a>,
    </li>#}
    <li class="comments">
        <a href="{{ path('blog_post_view', { 'slug': post.slug }) }}#disqus_thread">{{ 'Комментировать'|trans }}</a>
    </li>
</ul>
