{% extends 'StfalconBlogBundle::layout.html.twig' %}

{% block content %}
    <h4>Posts</h4>

    {% if posts %}
        <ul>
            {% for post in posts %}
                <li>
                    <a href="{{ path('blog_post_view', { 'slug': post.slug }) }}">
                        {{ post.title }}
                    </a>
                    (<a href="{{ path('blog_post_edit', { 'slug': post.slug }) }}">Edit Post</a>
                    / <a href="{{ path('blog_post_delete', { 'slug': post.slug }) }}">Delete Post</a>)
                </li>
            {% endfor %}
        </ul>

        <script type="text/javascript">
            var disqus_shortname = 'stfalcon-studio';

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function () {
                var s = document.createElement('script'); s.async = true;
                s.type = 'text/javascript';
                s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
                (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
            }());
        </script>
    {% else %}
        <div class="info">
            List of posts is empty
        </div>
    {% endif %}
{% endblock %}