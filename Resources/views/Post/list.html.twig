{% extends 'StfalconBlogBundle::layout.html.twig' %}

{% block content %}
    <h4>Posts</h4>

    {% if posts %}
        <ul>
            {% for post in posts %}
                <li>
                    <a href="{{ path('blog_post_view', { 'slug': post.slug }) }}">
                        {{ post.title }}
                    </a>
                    (<a href="{{ path('blog_post_edit', { 'slug': post.slug }) }}">Edit Post</a>
                    / <a href="{{ path('blog_post_delete', { 'slug': post.slug }) }}">Delete Post</a>)
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="info">
            List of posts is empty
        </div>
    {% endif %}
{% endblock %}